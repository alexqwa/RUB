generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Departament {
  id        Int      @id @unique @default(autoincrement())
  isActive  Boolean
  title     String
  weekdays  Weekday[]
  streets   Street[]

  @@map("departaments")
}

model Weekday {
  id            Int      @id @default(autoincrement())
  day           Int     
  departamentId Int
  departament   Departament @relation(fields: [departamentId], references: [id], onDelete: Cascade)

  @@map("weekdays")
}

model Street {
  id            Int      @id @default(autoincrement())
  isActive      Boolean
  code          String
  title         String
  weekday       Int
  departamentId Int
  departament   Departament @relation(fields: [departamentId], references: [id], onDelete: Cascade)

  @@map("streets")
}

model License {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  createdAt String 
  expiresAt String 

  @@map("licenses")
}